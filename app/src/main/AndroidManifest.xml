<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Stargazer3"
        tools:targetApi="31">
        <activity
            android:name=".screen.CharacterListPage"
            android:exported="false"
            android:label="@string/title_activity_character_list_page"
            android:theme="@style/Theme.Stargazer3" />
        <activity
            android:name=".screen.GlobalBackground"
            android:exported="false"
            android:label="@string/title_activity_global_background"
            android:theme="@style/Theme.Stargazer3" />
        <activity
            android:name=".screen.HomePage"
            android:exported="true"
            android:label="@string/title_activity_home_page"
            android:theme="@style/Theme.Stargazer3">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Stargazer3" />
    </application>

</manifest>